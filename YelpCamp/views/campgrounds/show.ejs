<% include ../partials/header %>

	<h1>Single Campground Page</h1>

	<div class="singlePage">
		<div class="header">
			<p class="title">Campground Name: <%= campground.name %></p>
			<div class="likes">
				<button id="likeButton"><%= campground.likes %></button>
			</div>
		</div>
		<img src="<%= campground.image %>" alt="Campground Image">
		<p class="created_by">Created by <%=campground.author.username%></p>
		<p class="created_by">Created on <%=campground.created%></p>
		<p class="description_title">Description:</p>
		<p class="description"><%= campground.description %></p>
		<% 
			campground.comments.forEach((comment)=>{
		%>
			<p class="comment">
				<strong><%= comment.author.username %> : </strong>
				<%= comment.text %>
			</p>
		<% 
			})
		%>

		<div >
			<ul>
				<li style="margin: 2rem 0;"><a href="../campgrounds/<%=campground._id%>/comments/new" class="button">Add a new Comment</a></li>
			</ul>
		</div>
	</div>

	<div>
		<a href="/campgrounds" class="button">Back to all Campgrounds</a>
	</div>

<% include ../partials/footer %>