<% include partials/header.ejs %>

<h1>Create a New Blog Post</h1>

<form action="/blogs" method="POST" class="ui form">
	<div class="field">
		<label>Title</label>
		<input type="text" name="blog[title]" id="title" placeholder="Blog Title" required>
	</div>
	<div class="field">
		<label>Image URL</label>
		<input type="text" name="blog[image]" id="image" placeholder="Blog Image Link">
	</div>
	<div class="field">
		<label>Blog Content</label>
		<textarea name="blog[body]" id="body" required placeholder="Blog Post Goes Here"></textarea>
	</div>
	<input type="submit" class="ui green big basic button">
</form>

