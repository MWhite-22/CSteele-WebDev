<% include partials/header.ejs %>

<h1>Edit A Blog Post</h1>

<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
	<div class="field">
		<label>Title</label>
		<input type="text" name="blog[title]" id="title" placeholder="Blog Title" value="<%= blog.title %>" required>
	</div>
	<div class="field">
		<label>Image URL</label>
		<input type="text" name="blog[image]" id="image" placeholder="Blog Image Link" value="<%= blog.image %>">
	</div>
	<div class="field">
		<label>Blog Content</label>
		<textarea name="blog[body]" id="body" required placeholder="Blog Post Goes Here"><%= blog.body %></textarea>
	</div>
	<input type="submit" class="ui green big button" value="Update Blog Post">
</form>


<% include partials/footer.ejs %>